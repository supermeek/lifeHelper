@import '../../app.wxss';

.title{
    margin-bottom: 20rpx;
}
.item-title {
    font-size: 28rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #333;
    display: inline-block;
    vertical-align: top;
}

.item-tip {
    position: absolute;
    right: 40rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    display: inline-block;
    vertical-align: top;
    color: #999;
}


.weui-uploader__bd {
    margin: 0 30rpx;
}
.weui-uploader__file{
    /* background: red; */
    width: 30%;
    position: relative;
    height: 210rpx;
    margin-right:5%;
    margin-bottom: 38rpx;
}
.weui-uploader__file:nth-child(3n+3){
    margin-right: 0;
}
.weui-uploader__img{
    width: 100%;
    height: 100%;
}
.weui-uploader__input-box{
    margin: 0;
    width: 30%;
    height: 210rpx;
}
.uploader_item_icon{
    background: rgba(0,0,0,0.5);
    position: absolute;
    color: #fff;
    width: 45rpx;
    height: 45rpx;
    font-size: 24rpx;
    text-align: center;
    line-height: 45rpx;
    top: 0;
    right: 0;
}