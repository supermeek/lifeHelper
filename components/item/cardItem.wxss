@import '../../app.wxss';

.item {
    display: inline-block;
    width: 100%;
    background: #fff;
    vertical-align: top;
    border-radius: 6px;
    border: 1rpx solid #eee;
    box-sizing: border-box;
    position: relative;
}

.item>image {
    width: 100%;
    height: 320rpx;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
}

.item>text {
    display: block;
    padding: 5rpx 20rpx;
}

.title {
    font-size: 15px;
    font-weight: bold;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.info {
    font-size: 12px;
    padding-bottom: 20rpx !important;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.type {
    position: absolute;
    top: 15rpx;
    right: 15rpx;
    display: block;
    font-size: 10px;
    border-radius: 6px;
    background: rgba(0, 0, 0, 0.5);
}
