@import '/style/weui.wxss';
@import '/style/main.wxss';
@import '/style/icon.wxss';
.list_wrapper {
  padding: 20rpx 0;
}

.list_time {
  display: block;
  width: 100%;
  margin-left: -20rpx;
  padding: 10rpx 20rpx;
  text-indent: 20rpx;
  font-size: 28rpx;
}

.weui-media-box {
  padding: 0;
  height: 120rpx;
}

.weui-media-box__hd_in-appmsg {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.weui-media-box__title {
  font-size: 28rpx;
}

.weui-media-box__desc {
  color: rgba(0, 0, 0, 0.5);
  padding-top: 4px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 24rpx;
}

.weui-cell__ft {
  min-width: 100rpx;
  font-size: 34rpx;
}

.weui-media-box:before {
  border-top: none;
}

/* 向左滑动实现删除操作 */

.movable-area{
  width: 100%;
  height: 120rpx;
}
.movable-view{
  width: 100%;
  height: 100%;
}
.touch-item {
  font-size: 14px;
  display: flex;
  justify-content: space-between;
  border-bottom:1rpx solid #f8f8f8;
  width: 100%;
  height: 100%;
  overflow: hidden
}
.content {
  padding: 0 20rpx;
  width: 100%;
  margin-right:0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(120px);
  transform: translateX(120px);
  margin-left: -120px
}
.btn {
  background-color: orangered;
  width: 120px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(120px);
  transform: translateX(120px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.btn>text{
  display: inline-block;
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 120rpx;
}
.edit{
  background: #999;
}
.touch-move-active .content,
.touch-move-active .btn {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}