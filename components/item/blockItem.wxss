@import '../../app.wxss';

/* 列表 */

.weui-media-box {
  padding: 0;
  height: 100%;
  /* height: 160rpx; */
}
.weui-media-box:before{
  border-top: none;
} 

.weui-media-box__hd_in-appmsg {
  width: 80rpx;
  height: 80rpx;
  margin-right: 0;
}
.weui-media-box__bd_in-appmsg{
  text-align: center;
}
.weui-media-box__title {
  font-size: 28rpx;
  margin-top: 20rpx;
  font-weight: bold;
}
.weui-media-box__desc {
  color: #999;
  padding-top: 4px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 24rpx;
}

.weui-media-box:before {
  border-top: none;
}

.level{
  background: red;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  min-width: 80rpx;
  padding: 5rpx;
  border-radius: 5px;
}