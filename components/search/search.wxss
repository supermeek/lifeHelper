/* 搜索框 */
@import '../../app.wxss';

.search_wrapper {
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 99;
}
.hover{
    opacity: 1;
    z-index: 99;
    background: #f5f5f5 !important;
}
.search_page {
    background: #fff;
    z-index: 99;
}

.weui-search-bar {
    border: none;
    border-radius: 50px;
    padding: 0 !important;
}

.weui-search-bar__form {
    border: none;
    background: #f1f0f0;
    border-radius: 50px;
    box-sizing: none;
}

.weui-search-bar__label {
    background: #f1f0f0;
    border-radius: 50px;
    box-sizing: none;
}

.weui-search-bar__input {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}

.weui-icon-search_in-box {
    top: 32rpx;
}

.weui-icon-clear {
    padding: 18rpx 18rpx;
}

.weui-search-bar__cancel-btn {
    line-height: 60rpx;
}
