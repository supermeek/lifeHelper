.container>view {
  width: 100%;
  box-sizing: border-box;
}

.container {
  padding-top: 300rpx;
}

/* 月份 */

.month_wrapper {
  padding: 20rpx 0;
  /* background: red; */
  text-align: center;
  position: fixed;
  top: 0;
  z-index: 99;
}

.month_wrapper>text {
  display: inline-block;
  /* background: yellow; */
  width: 20%;
}

.month_wrapper>text .iconfont {
  vertical-align: middle;
}

.month {
  display: inline-block;
  /* background: blue; */
  width: 60%;
}

/* 总计 */

.total_wrapper {
  /* margin-top: 100rpx; */
  position: fixed;
  top: 95rpx;
  z-index: 99;
  background: #fff;
}

.total_wrapper>view>text {
  display: block;
}

.left_total, .right_total {
  width: 50%;
  padding: 10rpx 0;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
  margin: 20rpx 0;
}

.right_total {
  border-left: 1rpx solid #ededed;
}

.total_count {
  font-weight: bold;
  font-size: 40rpx;
}

/* 统计图 */

ec-canvas {
  width: 100%;
  height: 800rpx;
  /* background: yellow; */
}


/* 标题 */
.title_wrapper{
  background: #fff;
  margin-top: 25rpx;
  padding: 25rpx;
  text-align: center;
  color: #666;
  border-top: 1rpx solid #f2f2f2;
  border-bottom: 1rpx solid #f2f2f2;
}