.container>view {
  width: 100%;
  box-sizing: border-box;
}

/* 月份 */
.top_wrapper{
  height: 200rpx;
  color: #555;
}
.left{
  width: 35%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.switch{
  width: 60%;
  background:rgba(255,255,255,0.8);
  padding: 4rpx;
  border-radius: 2px;
}
.switch>text{
  display: inline-block;
  width: 50%;
  height: 55rpx;
  line-height: 55rpx;
  text-align: center;
  box-sizing: border-box;
  vertical-align: top;
}
.checkedSwitch{
  border-radius: 2px;
  color: #fff;
  font-weight: bold;
  box-shadow: 0 0 5rpx #aaa;
}
.month {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
  border-right: 1rpx solid #fff;
  padding: 0 20rpx;
}

.right{
  width: 65%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: center;
}

.left_total, .right_total {
  width: 50%;
  height: 100%;
  text-align: center;
  /* display: inline-block; */
  box-sizing: border-box;

  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.right .text{
  height: 60rpx;
  line-height: 80rpx;
}
.total_count {
  font-weight: bold;
  font-size: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 20rpx;
}

.line{
  height: 20rpx;
  background: #ededed;
  margin-bottom: 50rpx;
}

/* 统计图 */

ec-canvas {
  width: 100%;
  height: 640rpx;
  z-index: 0;
}
.bill_wrapper{
  background: #fff;
  min-height: 200rpx;
  padding: 25rpx;
  box-sizing: border-box;
}