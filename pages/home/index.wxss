/* 功能模块 */
page{
  background: #f5f5f5;
}
.center_wrapper{
  height: 400rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  box-sizing: border-box;
  background: #fff;
}
.center_wrapper>view{
  width: 48.5%;
  height: 100%;
  box-sizing: border-box;
}
.right_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.left_item{
  background: #f8f8f8;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.center_wrapper .oldRed{
  display: inline-block;
  font-weight: bold;
}
.left_item image{
  width: 50%;
  height: 40%;
}
.right_item image{
  width: 30%;
  height: 50%;
}
.right_item>view{
  background: #f8f8f8;
  height: 47%;
  width: 100%;
  border-radius: 4px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.center_wrapper text{
  display: block;
  font-size: 28rpx;
  text-align: center;
}
.center_wrapper .gray{
  font-size: 24rpx;
  color: #999;
}

/* 标题 */
.title_wrapper{
  background: #fff;
  margin-top: 25rpx;
  padding: 25rpx;
  text-align: center;
  color: #666;
  border-bottom: 1rpx solid #f2f2f2;
}

/* 账单 */
.bill_wrapper{
  background: #fff;
  min-height: 400rpx;
  padding: 25rpx;
  box-sizing: border-box;
}
.bill_item{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
  height: 50rpx;
}
.progress{
  margin: 0 20rpx;
  flex: 2;
}
.img{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.percent{
  font-size: 26rpx;
}