.container>view {
  width: 100%;
  box-sizing: border-box;
}

.top_wrapper>image {
  width: 100%;
}

.content_wrapper {
  width: 100% !important;
  min-height: 800rpx;
  margin-top: -140rpx;
  background: #fff;
  border-top: 1rpx solid #666;
  border-radius: 100px 100px 0 0;
  padding: 100rpx 15% 20rpx 15%;
}

/* tab类型 */

.tabs {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: #666;
}

.tabs>text {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 10px 10px 0 0;
  border: 1rpx solid #ededed;
  border-bottom: none !important;
}
.borderNone{
  border: none !important;
}
.contents {
  border-top: 1rpx solid #f8f8f8;
  border-bottom: 1rpx solid #f8f8f8;
}

.weui-cell {
  padding: 0;
  /* background: yellow; */
}

.weui-cell:before {
  left: 0;
  border-width: 1rpx !important;
  border-color: #f8f8f8 !important;
}

.weui-label {
  width: 140rpx;
  color: #333;
  font-weight: bold;
}

.weui-cell_select .weui-cell__bd:after {
  right: 0;
}

.weui-select {
  text-align: right;
  padding: 0;
  box-sizing: border-box;
  padding-right: 30rpx !important;
}

.weui-input {
  height: 56px;
  text-align: right !important;
}

.weui-area {
  text-align: right !important;
  display: inline-block;
  width: 100%;
  font-size: 14px;
  box-sizing: border-box;
  min-height: 16px;
  margin-top: 25px;
  margin-bottom: 16px;
}


/* 行内滚动 */

.select_item {
  height: 50px !important;
  line-height: 50px;
  color: #666;
  text-align: center !important;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.line:after, .line:before {
  border-top: none !important;
}

.select_item>image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 5rpx;
}

.label {
  /* background: #eee; */
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  color: #666;
  border-bottom: 1rpx solid #f2f2f2;
}

.label>text {
  display: inline-block;
  width: 25%;
  height: 50px;
  line-height: 50px;
}

